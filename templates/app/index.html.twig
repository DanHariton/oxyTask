{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <h1 class="text-center mt-5 mb-4">Add new user</h1>
        <div class="row">
            <div class="col">
                <form id="user-add-form">
                    <div class="form-group">
                        <label for="user-name-form">Name</label>
                        <input type="text" name="name" class="form-control" id="user-name-form" aria-describedby="emailHelp">
                    </div>
                    <div class="form-group">
                        <label for="user-email-form">Email address</label>
                        <input type="email" name="email" class="form-control" id="user-email-form" aria-describedby="emailHelp">
                        <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
                    </div>
                    <div class="form-group">
                        <label for="user-password-form">Password</label>
                        <input type="password" name="password" class="form-control" id="user-password-form">
                    </div>
                    <div class="form-group">
                        <label for="user-role-form">Role</label>
                        <select class="form-control" name="role" id="user-role-form">
                            <option>user</option>
                            <option>admin</option>
                        </select>
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </form>
            </div>
            <div class="col">
                <textarea class="form-control" id="console-return" cols="30" rows="100"></textarea>
            </div>
        </div>
    </div>
{% endblock %}